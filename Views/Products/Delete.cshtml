@model Asset_Web.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>

    @{
        var itemCurrency = Model.ProdOffice.Currency.CurrencyName;
    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdCat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdCat.CatName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdModel.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdModel.Brand.BrandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdModel.BrandModelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdPrice)
        </dt>
        <dd class="col-sm-10">
            @itemCurrency  @Model.ProdPrice.ToString("N")
            @*@Html.DisplayFor(model => model.ProdPrice)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdPurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Model.ProdPurchaseDate.ToShortDateString()
            @*@Html.DisplayFor(model => model.ProdPurchaseDate)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdOffice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdOffice.OfficeName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
